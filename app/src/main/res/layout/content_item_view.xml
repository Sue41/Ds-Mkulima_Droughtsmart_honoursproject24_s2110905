<!-- res/layout/item_view.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- First item -->
    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/featuresdrawable"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item1_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/item1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/green_500" />

        <LinearLayout
            android:id="@+id/item1_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/featurebuttondrawable"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item1_button_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:gravity="center_vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/item1_button_icon_container"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/arrowbuttondrawable">

                <ImageView
                    android:id="@+id/item1_button_icon"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:src="@drawable/arrowleft" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Flexible space -->
    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />

    <!-- Second item -->
    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/featuresdrawable"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item2_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/item2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/green_500" />

        <LinearLayout
            android:id="@+id/item2_button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/featurebuttondrawable"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item2_button_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:gravity="center_vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/item2_button_icon_container"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/arrowbuttondrawable">

                <ImageView
                    android:id="@+id/item2_button_icon"
                    android:layout_width="20dp"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    android:src="@drawable/arrowleft" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
